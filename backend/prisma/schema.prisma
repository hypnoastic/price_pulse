generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  password     String?
  name         String?
  picture      String?
  googleId     String?  @unique
  refreshToken String?
  verified     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  products  Product[]
  alerts    Alert[]
  
  @@map("users")
}

model Product {
  id          String   @id @default(cuid())
  url         String
  name        String
  image       String?
  currentPrice Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  priceHistory PriceHistory[]
  alerts       Alert[]
  
  @@map("products")
}

model PriceHistory {
  id        String   @id @default(cuid())
  price     Float
  timestamp DateTime @default(now())
  
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@map("price_history")
}

model Alert {
  id          String   @id @default(cuid())
  targetPrice Float
  email       String
  createdAt   DateTime @default(now())
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@map("alerts")
}

model OTPVerification {
  id        String   @id @default(cuid())
  email     String
  otp       String
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  
  @@map("otp_verifications")
}